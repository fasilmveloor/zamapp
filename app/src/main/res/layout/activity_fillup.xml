<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="426dp" >

        <EditText
            android:id="@+id/NAME"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center"
            android:hint="NAME"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/adno"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/NAME"
            android:layout_below="@+id/NAME"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:gravity="center"
            android:hint="NUMBER"
            android:inputType="number" />

        <EditText
            android:id="@+id/AGE"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/adno"
            android:layout_alignBottom="@+id/adno"
            android:layout_alignRight="@+id/NAME"
            android:ems="10"
            android:gravity="center"
            android:hint="AGE"
            android:inputType="number" />

        <Spinner
            android:id="@+id/ADTYPE"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adno"
            android:layout_marginTop="20dp"
            android:background="#f92b3a"
            android:popupBackground="#f92b3a"
            android:textAlignment="center"
           	android:hint="TYPE"
            android:layout_toLeftOf="@+id/AGE" />

        <Spinner
            android:id="@+id/course"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/AGE"
            android:layout_alignTop="@+id/ADTYPE"
            android:background="#f92b3a"
            android:popupBackground="#f92b3a"
            
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NAME"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
           
            android:text="ADMISSION DETAILS" />

        <EditText
            android:id="@+id/parent"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ADTYPE"
            android:layout_below="@+id/ADTYPE"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:gravity="center"
            android:hint="GUARDIAN NAME"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/con"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/parent"
            android:layout_below="@+id/parent"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="MOBILE"
            android:inputType="phone" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/sitem"
            android:layout_marginLeft="20dp"
           	android:layout_marginBottom="10dp"
            android:src="@drawable/addsm" />

        <Spinner
            android:id="@+id/sitem"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/con"
            android:layout_below="@+id/con"
            android:background="#f92b3a"
            android:popupBackground="#f92b3a"
            
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/save"
            android:layout_centerHorizontal="true"
            android:src="@drawable/againbacksm" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignRight="@+id/course"
            android:layout_alignTop="@+id/imageView1"
            android:src="@drawable/updatesm" />

    </RelativeLayout>

</ScrollView>