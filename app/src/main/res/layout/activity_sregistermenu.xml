<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/fill"
        android:layout_width="145dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/fillupsm" />

    <ImageView
        android:id="@+id/del"
        android:layout_width="145dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fill"
        android:layout_marginRight="10dp"
        android:src="@drawable/biggdelesm" />

    <ImageView
        android:id="@+id/view"
        android:layout_width="145dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/fill"
        android:layout_below="@+id/fill"
        android:layout_marginTop="120dp"
        android:src="@drawable/viewsm" />

    <ImageView
        android:id="@+id/bac"
        android:layout_width="145dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/del"
        android:layout_below="@+id/del"
        android:layout_marginTop="120dp"
        android:src="@drawable/bigbacksm" />

</RelativeLayout>